  "main": "index.js",
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --plugin=prettier-plugin-ejs --write .",
    "start": "node ./backend/server.js",
    "start:dev:linux": "concurrently \"npm:server:dev:linux\" \"npm:build:dev\"",
    "start:dev:windows": "concurrently \"npm:server:dev:windows\" \"npm:build:dev\"",
    "server:dev:linux": "export NODE_ENV=development && nodemon ./backend/server.js",
    "server:dev:windows": "set NODE_ENV=development && nodemon ./backend/server.js",
    "build": "webpack",
    "build:dev": "webpack --watch",
    "db:create": "node-pg-migrate create -- ",
    "db:migrate": "node-pg-migrate up",
    "db:rollback": "node-pg-migrate down",
    "postinstall": "npm run db:migrate",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "pg-promise": "^11.5.4",
    "prettier": "^3.0.3"
  },
  "devDependencies": {
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "connect-livereload": "^0.6.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "livereload": "^0.9.3",
    "nodemon": "^3.0.1",
    "prettier-plugin-ejs": "^0.0.18",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "frontend/**/*.js": "webpack"
  }
